{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "meteor": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "plugins": [
    "react",
    "meteor",
    "import",
    "flowtype",
    "babel"
  ],
  "extends": [
    "airbnb/base",
    "plugin:react/recommended",
    "plugin:meteor/recommended",
    "plugin:import/errors",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "meteor/eventmap-params": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "react/prop-types": 0,
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "dot-notation": 0,
    "no-console": 0
  }
}
